{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run current file",
            "type": "process",
            "command": "dart",
            "args":  ["${file}"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Watch",
            "type": "process",
            "command": "pub",
            "args":  [
                "run","build_runner","watch"],
            "group": "build"
        }
    ]
}